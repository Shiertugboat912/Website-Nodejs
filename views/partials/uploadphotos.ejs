<form method="POST" action="admin/photos" enctype="multipart/form-data">
    <h1>Upoload a Photo </h1><br>
    <input type="file" name="uploaded" accept="image/png, image/jpeg" required><br><br>
    <input type="text" name="image_name" placeholder="name of the img" required><br><br>
    <textarea name="description" placeholder="Enter image description" cols="90" rows="10"></textarea><br><br>
    <button class="submit">Upload</button>
    <br><br>
    <hr>
</form>

<br>
<form method="POST" action="admin/deletephotos" enctype="multipart/form-data">
    <h1>Delete a Photo </h1><br>
    <input type="text" name="deleteimage" placeholder="name of the img" required>
    <br><br>
    <button class="submit">Delete</button>
</form>


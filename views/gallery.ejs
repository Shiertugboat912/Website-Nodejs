<html>

<head>
    <title>Gallery
    </title>
    <link rel="stylesheet" type="text/css" href="css/stylesheet3.css">
</head>

<body>
    <%- include('partials/header.ejs') %>
    <script type="text/javascript" src="js/feed.js"></script>
    <br><br><br><br><br><br><br>
    <div id="banner">
        <h1>Gallery</h1>
    </div>
    <form enctype="multipart/form-data">
        <br><br>
        <div id="news">
            <% if(data.length){ var i = 0 %>
            <table>
                <% while(i < data.length) { %>
                <tr>
                    <td class="box"><img onclick="swipe(name,alt)" alt="<%=data[i].img_des%>" name="<%=data[i].image%>"
                            src="http://localhost:3000/images/upload_images/<%=data[i].image%>">
                        <p><%=data[i].img_name%></p>
                    </td>
                    <% i+=1
                if(!(i < data.length))
                { break}%>
                    <td class="box">
                        <img onclick="swipe(name,alt)" alt="<%=data[i].img_des%>" name="<%=data[i].image%>"
                            src="http://localhost:3000/images/upload_images/<%=data[i].image%>">
                        <p><%=data[i].img_name%></p>
                    </td>

                    <% i+=1 
                if(!(i < data.length))
                {break}%>
                    <td class="box"><img onclick="swipe(name,alt)" alt="<%=data[i].img_des%>" name="<%=data[i].image%>"
                            src="http://localhost:3000/images/upload_images/<%=data[i].image%>">
                        <p><%=data[i].img_name%></p>
                    </td>
                </tr>
                <% i = i+1} %>
                <%  }else{ %>
                <label>NO Images</label>
                <% } %>
            </table>
        </div>
    </form>
    <%- include('partials/footer.ejs') %>
</body>
<style>
    #banner {
        background-image: url(css/background.jpg);
        background-size: cover;
        padding: 30px;
        text-align: center;
        font-family: 'Archivo Black', sans-serif;
    }

    form {
        padding-right: 30px;
        padding-bottom: 10px;
        width: 50%;
        font-family: 'Archivo Black', sans-serif;
        height: auto;
        font-size: 13px;
        transform: translate(50px);
    }

    table {
        border: 2px solid skyblue;
        width: 700px;
        text-align: center;
        transform: translate(100px);
        box-shadow: 5px 5px 10px grey;
    }

    td,
    th {
        height: 50px;
        border: 2px solid skyblue;
        font-family: 'Raleway', sans-serif;
        width: auto;
        padding: none;
    }

    form input {
        border: 1px solid grey;
        background: transparent;
        outline: none;
        height: 40px;
        color: black;
        font-family: 'Raleway', sans-serif;
        padding-left: 5px;
        font-size: 16px;
        width: 80%;
    }

    .box {
        width: 320px;
        margin-left: 45px;
        text-align: center;
        font-size: 20px;
        box-shadow: 5px 5px 10px grey;

    }

    .box:hover {
        transition: 0.2s linear;
        transform: scale(1.1, 1.1);
    }

    .box p {
        visibility: hidden;
        position: absolute;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        bottom: 0;
        text-align: center;
        width: inherit;
    }

    .box:hover p {
        visibility: visible;
    }

    img {
        width: inherit;
        object-fit: cover;
    }
</style>
<script type="text/javascript">
    function swipe(src, a) {
        window.open('/viewpage/' + src + '/' + a);
    }
</script>


</html>